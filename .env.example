# Example environment variables for Fake News Detector
# Copy this file to .env and fill in your values

# Model Configuration
MODEL_NAME=mrm8488/bert-tiny-finetuned-fake-news-detection
MODEL_MAX_LENGTH=512

# Google Fact Check Tools API (optional)
# Get your API key from: https://console.cloud.google.com/
FACTCHECK_API_KEY=

# Scoring Weights (must sum to 1.0)
WEIGHT_MODEL=0.5
WEIGHT_FACTCHECK=0.3
WEIGHT_SOURCE=0.2

# Domain Reputation File
DOMAIN_REPUTATION_FILE=domain_reputation.json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true

# Frontend Configuration (for production builds)
REACT_APP_API_BASE=http://localhost:8000